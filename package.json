{
  "name": "red-envelope-game",
  "version": "1.0.0",
  "description": "เกมสุ่มเปิดซองแดงอั่งเปาจีน - Red Envelope Game",
  "main": "game.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "red-envelope",
    "game",
    "chinese-new-year",
    "javascript"
  ],
  "author": "Red Envelope Game",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "game.js",
      "!node_modules/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
